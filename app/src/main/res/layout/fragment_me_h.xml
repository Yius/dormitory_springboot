<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:orientation="horizontal">
        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/personal_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/portrait_h"
            app:riv_is_circle="true"
            app:riv_border_width="1dp"
            app:riv_border_color="@color/xui_config_color_separator_dark_tablet"/>
        <LinearLayout
            android:id="@+id/ll_info_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_me_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A座宿管"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宿管编号："
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#888"/>
                <TextView
                    android:id="@+id/tv_me_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10001"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#666"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所管宿舍楼："
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#888"/>
                <TextView
                    android:id="@+id/tv_me_govern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A101"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#666"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_personal_info_h"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/persona_info"
            android:clickable="false"
            android:focusable="false"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="个人信息"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:clickable="false"
            android:focusable="false"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:scaleType="center"
            android:clickable="false"
            android:focusable="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_set_up_h"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/setup"
            android:clickable="false"
            android:focusable="false"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设置"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:clickable="false"
            android:focusable="false"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right"
            android:scaleType="center"
            android:clickable="false"
            android:focusable="false"/>
    </LinearLayout>
</LinearLayout>
