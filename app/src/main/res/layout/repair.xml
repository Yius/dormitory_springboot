<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="#F8F8FF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/label_dormID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="申请宿舍"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_dormID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/label_dormID"
            android:text="宿舍号"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/label_applyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dormID"
            android:text="申请时间"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_applyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dormID"
            android:text="时间"
            android:layout_toRightOf="@id/label_applyDate"
            android:paddingTop="6dp"
            android:textSize="17sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"/>


        <TextView
            android:id="@+id/label_repairName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_applyDate"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="维修物品"
            android:paddingTop="6dp"
            android:paddingLeft="10dp"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tv_repairName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_applyDate"
            android:layout_toRightOf="@id/label_repairName"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="维修物品"
            android:paddingTop="6dp"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_applyID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="编号"
            android:paddingRight="5dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dormID"
            android:text="处理情况"
            android:layout_alignParentRight="true"
            android:paddingTop="6dp"
            android:textSize="17sp"
            android:paddingRight="10dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
