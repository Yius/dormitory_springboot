    <EditText
        android:id="@+id/et_ID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="学  号(必 填)"
        android:gravity="center"
        android:layout_below="@id/et_dorm"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="6-10位密码(必 填)"
        android:gravity="center"
        android:layout_below="@id/et_ID"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/et_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="再次确认密码(必 填)"
        android:gravity="center"
        android:layout_below="@id/et_pwd"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:inputType="textPassword"/>


    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="手机号"
        android:gravity="center"
        android:layout_below="@id/et_confirm"
        android:layout_marginTop="10dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="昵称"
        android:gravity="center"
        android:layout_below="@id/et_phone"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/et_belong"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_register"
        android:hint="所属宿舍楼(必 填)"
        android:gravity="center"
        android:layout_below="@id/et_nickname"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认注册"
        android:gravity="center"
        android:layout_below="@id/et_belong"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:background="@drawable/button_main3"/>

</RelativeLayout>