<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="水电费"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="35dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宿舍号："
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222"/>
        <TextView
            android:id="@+id/tv_dormID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A101"
            android:textSize="30sp"
            android:textColor="#aaa"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:orientation="vertical">
        <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
            android:id="@+id/super_tv_water"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:sLeftTextString="水费"
            app:sLeftTextIsBold="true"
            app:sLeftTextSize="20sp"
            app:sRightIconRes="@drawable/ic_arrow_right"
            app:sUseShape="true"
            app:sRightViewMarginRight="0dp"
            app:sShapeCornersTopLeftRadius="15dp"
            app:sShapeCornersTopRightRadius="15dp"
            app:sShapeCornersBottomLeftRadius="15dp"
            app:sShapeCornersBottomRightRadius="15dp"
            app:sShapeSelectorPressedColor="@color/xui_config_color_10_pure_black"
            />
        <com.xuexiang.xui.widget.layout.ExpandableLayout
            android:id="@+id/expandable_layout_water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_config_color_transparent"
            app:el_duration="300"
            app:el_expanded="false"
            >
            <com.xuexiang.xui.widget.layout.XUILinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/xui_config_color_white"
                app:xui_radius="15dp"
                app:xui_hideRadiusSide="top"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_web_site_water"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="暂未提供此服务的网址"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                    android:id="@+id/super_btn_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="访问"
                    app:sCornersRadius="15dp"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"/>
            </com.xuexiang.xui.widget.layout.XUILinearLayout>
        </com.xuexiang.xui.widget.layout.ExpandableLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
            android:id="@+id/super_tv_electricity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:sLeftTextString="电费"
            app:sLeftTextIsBold="true"
            app:sLeftTextSize="20sp"
            app:sRightIconRes="@drawable/ic_arrow_right"
            app:sUseShape="true"
            app:sRightViewMarginRight="0dp"
            app:sShapeCornersTopLeftRadius="15dp"
            app:sShapeCornersTopRightRadius="15dp"
            app:sShapeCornersBottomLeftRadius="15dp"
            app:sShapeCornersBottomRightRadius="15dp"
            app:sShapeSelectorPressedColor="@color/xui_config_color_10_pure_black"
            />
        <com.xuexiang.xui.widget.layout.ExpandableLayout
            android:id="@+id/expandable_layout_electricity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xui_config_color_transparent"
            app:el_duration="300"
            app:el_expanded="false"
            >
            <com.xuexiang.xui.widget.layout.XUILinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/xui_config_color_white"
                app:xui_radius="15dp"
                app:xui_hideRadiusSide="top"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_web_site_electricity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="暂未提供此服务的网址"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                    android:id="@+id/super_btn_electricity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="访问"
                    app:sCornersRadius="15dp"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"/>
            </com.xuexiang.xui.widget.layout.XUILinearLayout>
        </com.xuexiang.xui.widget.layout.ExpandableLayout>
    </LinearLayout>
</LinearLayout>